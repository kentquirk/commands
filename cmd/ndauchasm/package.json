{
    "name": "ndauchasm",
    "displayName": "ndauchasm",
    "description": "Support for ndau's chaincode assembly language, chasm",
    "version": "0.2.1",
    "publisher": "Oneiro",
    "engines": {
        "vscode": "^1.28.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "contributes": {
        "languages": [
            {
                "id": "chasm",
                "aliases": [
                    "chasm"
                ],
                "extensions": [
                    ".chasm",
                    ".crank",
                    ".crankgen"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "chasm",
                "scopeName": "source.chasm",
                "path": "./syntaxes/chasm.tmLanguage.json"
            }
        ],
        "snippets": [
            {
                "language": "chasm",
                "path": "./snippets/chasm.json"
            }
        ]
    }
}
